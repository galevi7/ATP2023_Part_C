<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="character_background" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.OpeningScreenController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <Region VBox.vgrow="ALWAYS" />
            <StackPane>
                <ImageView fx:id="selectedCharacterImageView" fitHeight="158.0" fitWidth="159.0" translateX="20" translateY="0" />
            </StackPane>
            <Region prefWidth="500.0" VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="500.0" spacing="10">
                <ChoiceBox fx:id="characterChoiceBox" prefWidth="200.0" />
                <Button fx:id="startGameButton" onAction="#openOtherWindow" />
            <Region prefHeight="56.0" prefWidth="0.0" />
            </HBox>
        </VBox>
    </children>
</StackPane>
